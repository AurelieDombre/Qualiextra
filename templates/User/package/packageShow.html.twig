{% extends 'base.html.twig' %}

{% block title %} {{package.name}} {% endblock %}

{% block body %}
{% include "User/partials/header.html.twig" %}

<main class="container-fluid row">

    <section class="wrap-img">
        
        <div class="col-sm-4 col-md-6">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2626.062338256993!2d2.3470435508708123!3d48.83794960999873!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e671ec84e10bf1%3A0x32a625634401eeb7!2sH%C3%B4tel%20Monte%20Cristo%20Paris!5e0!3m2!1sfr!2sfr!4v1658297449813!5m2!1sfr!2sfr"
                width="550" height="350" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>

        <div class="col-sm-4 col-md-6 container--img">
            <img src="{{package.picture}}"  alt="{{package.picture}}" class="package_picture">
        </div>

    </section>

    <div class="container--title_package">
        <h1>{{package.name}}</h1>
    </div>

    <section class="container--address row">

            <div class="container--description_package col-sm-4 col-md-4">
                <div class="description_package">
                    <h3>Description</h3>

                    <p >{{package.description}}</p>
                </div>

                <div class="validity_price">
                    <p>Valable jusqu'au : <span class="validity-span">{{package.date|date('d/m/Y')}}</span></p>
                    <p class="price">
                        {{package.price}} €
                        {# <img src="{{ asset('/asset/image-package/euro.png') }}" alt="price image">   #}
                    </p>
                </div>

            </div>

            <div class="container--address_package col-sm-4 col-md-4 ">
                <h3>Contacter l'établissement</h3>
                <div class="address_package--address">
                        <p>{{package.establishment.name}}</p> 
                        <p>{{package.establishment.address}}</p>
                        <p href="tel:+33{{package.establishment.phone}}">Téléphone : {{package.establishment.phone}}</p>
                        <p>E-mail : {{package.establishment.email}}</p>
                        <p>Site web : {{package.establishment.website}}</p>
                        <a class="address_package--address button" href="mailto:{{package.establishment.email}}"><div class="button from-center">Nous contacter</div></a>
                </div>
            </div>
    </section>

    <section class=" col-sm-4 col-md-12 col-lg-12">

            <div class="container--formBook_package">
                <h3> Réservation </h3>
                <form action="" method="post">
                    <fieldset class="formBook_package--names">
                        <div class="input-book">
                            <label class="" for="lastname"> Nom</label>
                            <input type="text" name="lastname" id="lastname" placeholder="Nom" require>
                        </div>   
                        <div class="input-book">
                            <label class="" for="firstname">Prénom</label>
                            <input type="text" name="firstname" id="firstname" placeholder="Prénom" require> <br>
                        </div>      
                        <div class="input-book">    
                            <label class="" for="email"> E-mail</label>
                            <input type="email" name="email" id="email" placeholder="@ E-mail" require>
                        </div>  

                    </fieldset>

                    <fieldset class="formBook_package--form_date">
                        <label class="" for="date">La date de réservation</label> 
                        <input type="date" name="date" id="date" placeholder="date">
                        <br>
                        <div class="button from-center" type="submit"> Envoyer</div>
                    </fieldset>

                </form>
            </div>
    </section>

</main>
{% include "User/partials/footer.html.twig" %}
{% endblock %}
