{% extends 'base.html.twig' %}

{% block title %}Establishment{% endblock %}

{% block body %}
    <h1>Establishment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ establishment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ establishment.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ establishment.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ establishment.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ establishment.email }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ establishment.website }}</td>
            </tr>
            <tr>
                <th>OpeningHour</th>
                <td>{{ establishment.openingHour ? establishment.openingHour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>OpeningDay</th>
                <td>{{ establishment.openingDay ? establishment.openingDay|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ establishment.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ establishment.picture }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ establishment.price }}</td>
            </tr>
            <tr>
                <th>Longitudes</th>
                <td>{{ establishment.longitudes }}</td>
            </tr>
            <tr>
                <th>Latitudes</th>
                <td>{{ establishment.latitudes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_establishment_index') }}">back to list</a>

